{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <h1>Location</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ location.id }}</td>
            </tr>
            <tr>
                <th>Adres</th>
                <td>{{ location.adres }}</td>
            </tr>
            <tr>
                <th>Plaats</th>
                <td>{{ location.plaats }}</td>
            </tr>
            <tr>
                <th>Beschikbaarheid</th>
                <td>{{ location.beschikbaarheid ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('location_index') }}">back to list</a>

    <a href="{{ path('location_edit', {'id': location.id}) }}">edit</a>

    {{ include('location/_delete_form.html.twig') }}
{% endblock %}
